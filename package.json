{
  "name": "omni-transactions-sdk",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "bun test tests/unit/",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:all": "bun test",
    "test:watch": "bun test --watch tests/unit/",
    "test:ci": "bun test --coverage",
    "lint": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun build",
    "lefthook": "lefthook install",
    "check-exports": "attw --pack .",
    "release": "bun build && changeset publish"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@types/bun": "latest",
    "changeset": "^0.2.6",
    "lefthook": "^1.11.13"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@near-js/accounts": "^2.0.3",
    "@near-js/client": "^2.0.3",
    "@near-js/crypto": "^2.0.3",
    "@near-js/keystores": "^2.0.3",
    "@near-js/keystores-node": "^2.0.3",
    "@near-js/providers": "^2.0.3",
    "@near-js/utils": "^2.0.3",
    "@noble/curves": "^1.9.2",
    "@noble/hashes": "^1.8.0",
    "@scure/base": "^1.2.6",
    "@scure/btc-signer": "^1.8.1",
    "micro-eth-signer": "^0.15.0",
    "zod": "^3.25.57"
  }
}
